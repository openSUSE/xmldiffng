# See https://docs.python.org/2/distutils/sourcedist.html#the-manifest-in-template
# for details
#

graft docs
graft examples
graft src
graft ci
graft tests

exclude .bumpversion.cfg
exclude .cookiecutterrc
exclude tests/.coverage
prune contrib

include .coveragerc
include .editorconfig
include .isort.cfg

include devel_requirements.txt
include travis_requirements.txt
include requirements.txt

include AUTHORS.rst
include CHANGELOG.rst
include CONTRIBUTING.rst
include LICENSE
include README.rst
include setup.cfg

include tox.ini .travis.yml

global-exclude *.py[cod] __pycache__ *.so *.dylib
